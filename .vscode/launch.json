{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "probe-rs-debug",
            "request": "launch",
            "name": "Debug Argus",
            "preLaunchTask": "build-argus-${input:argus-variant}",
            "flashingConfig": {
                "flashingEnabled": true
            },
            "chip": "STM32H733VGTx",
            "coreConfigs": [
                {
                    "programBinary": "${workspaceFolder}/target/thumbv7em-none-eabihf/debug/argus",
                }
            ],
        },
        {
            "type": "probe-rs-debug",
            "request": "launch",
            "name": "Debug Phoenix",
            "flashingConfig": {
                "flashingEnabled": true
            },
            "chip": "STM32H733VGTx",
            "coreConfigs": [
                {
                    "programBinary": "${workspaceFolder}/target/thumbv7em-none-eabihf/debug/phoenix",
                }
            ],
        },
    ],
    "inputs": [
        {
            "id": "argus-variant",
            "type": "pickString",
            "description": "Which Argus variant would you like to run?",
            "options": [
                "strain",
                "temperature",
                "pressure"
            ]
        }
    ]
}